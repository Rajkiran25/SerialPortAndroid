<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rajkiran.serialportandroid" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".sample.SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".sample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sample.SerialPortActivity" >
        </activity>
        <activity android:name=".sample.SerialPortPreferences"/>
        <activity android:name=".sample.ConsoleActivity" >
        </activity>
        <activity android:name=".sample.LoopbackActivity" >
        </activity>
        <activity android:name=".sample.Sending01010101Activity"></activity>
        <service android:name=".SercdService"/>

    </application>

</manifest>
